<mujoco model="gripper">
    <compiler angle="radian" coordinate="local" inertiafromgeom="true"/>
    <option timestep="0.002" gravity="0 0 -9.81" iterations="50" integrator="Euler"/>
    
    <worldbody>
        <!-- 基座 -->
        <body name="base" pos="0 0 0">
            <joint type="free"/>
            <geom type="box" size="0.05 0.05 0.02" rgba="0.7 0.7 0.7 1"/>
            
            <!-- 左夹爪 -->
            <body name="left_gripper" pos="-0.05 0 0">
                <joint name="left_joint" type="hinge" axis="0 0 1" range="-0.5 0.5"/>
                <geom type="box" size="0.05 0.01 0.01" rgba="0.8 0.2 0.2 1"/>
                <!-- 力传感器 -->
                <site name="left_contact" pos="0.05 0 0" size="0.01"/>
            </body>
            
            <!-- 右夹爪 -->
            <body name="right_gripper" pos="0.05 0 0">
                <joint name="right_joint" type="hinge" axis="0 0 1" range="-0.5 0.5"/>
                <geom type="box" size="0.05 0.01 0.01" rgba="0.2 0.8 0.2 1"/>
                <!-- 力传感器 -->
                <site name="right_contact" pos="-0.05 0 0" size="0.01"/>
            </body>
        </body>
    </worldbody>
    
    <!-- 传感器定义 -->
    <sensor>
        <force name="left_force" site="left_contact"/>
        <force name="right_force" site="right_contact"/>
    </sensor>
    
    <!-- 执行器定义 -->
    <actuator>
        <motor joint="left_joint" name="left_motor"/>
        <motor joint="right_joint" name="right_motor"/>
    </actuator>
</mujoco>